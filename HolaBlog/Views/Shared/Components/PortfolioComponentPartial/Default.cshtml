<section id="portfolio" class="s-works target-section">
    @foreach (var item in Model)
    {
        <div class="row narrow section-intro has-bottom-sep">
            <div class="col-full">
                <h3>Portföyüm</h3>
                <h1>@item.Title</h1>
                <p class="lead">@item.Description</p>
            </div>
        </div>

        <div class="row masonry-wrap">
            <div class="masonry">
                <div class="masonry__brick">
                    <div class="item-folio">
                        <div class="item-folio__thumb">
                            <a href="images/portfolio/gallery/g-@item.ImageUrl" class="thumb-link" title="The Beetle Car" data-size="1050x700">
                                <img src="~/HolaTemplate/images/portfolio/@item.ImageUrl" srcset="~/HolaTemplate/images/portfolio/@item.ImageUrl 1x, ~/HolaTemplate/images/portfolio/@item.ImageUrl 2x" alt="">
                                <span class="shadow-overlay"></span>
                            </a>
                        </div>
                        <div class="item-folio__text">
                            <h3 class="item-folio__title">
                                @item.ProjectName
                            </h3>
                            <p class="item-folio__cat">
                                @item.JobArea
                            </p>
                        </div>
                        <a href="@item.ProjectUrl" class="item-folio__project-link" title="Project link">
                            <i class="im im-link"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</section>
