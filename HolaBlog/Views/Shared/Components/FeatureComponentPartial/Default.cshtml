@model List<HolaBlog.Entities.Feature>

<section id="home" class="s-home page-hero target-section" data-parallax="scroll" data-image-src="https://i.hizliresim.com/g1imtba.jpg" data-natural-width=3000 data-natural-height=2000 data-position-y=center>

    <div class="overlay"></div>
    <div class="shadow-overlay"></div>

    <div class="home-content">
        @foreach (var item in Model)
        {
            <div class="row home-content__main">

                <h3>@item.Title</h3>

                <h1>
                    Ben @item.FirstName @item.LastName <br>
                    @item.Description
                </h1>

                <div class="home-content__buttons">
                    <a href="#portfolio" class="smoothscroll btn btn--stroke">
                        Son Projelerim
                    </a>
                    <a href="#about" class="smoothscroll btn btn--stroke">
                        Daha Fazlası
                    </a>
                </div>

                <div class="home-content__scroll">
                    <a href="#about" class="scroll-link smoothscroll">
                        <span>Aşağı İn</span>
                    </a>
                </div>

            </div>
        }


    </div>

    <ul class="home-social">
        @for (int i = 0; i<@ViewBag.count; i++)
        {
            <li>
                <a href="@ViewBag.url[i]">
                    <i class="@ViewBag.icon[i]" aria-hidden="true">
                    </i><span>@ViewBag.socialMediaName[i]</span>
                </a>
            </li>
        }
    </ul>

</section>
