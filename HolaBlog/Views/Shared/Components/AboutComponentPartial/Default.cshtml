@model List<HolaBlog.Entities.About>
<section id="about" class="s-about target-section">

    <div class="row narrow section-intro has-bottom-sep">
        <div class="col-full text-center">
            <h3>Hakkımda</h3>
            <h1>Ben Kimim?</h1>
            <p class="lead">@ViewBag.description</p>
        </div>
    </div>

    <div class="row about-content">
        <div class="col-six tab-full left">
            <h3>Selamlar!</h3>

            <p>@ViewBag.aboutDetails</p>
        </div>
        @await Component.InvokeAsync("SkillComponentPartial")
    </div>

    <div class="row about-content about-content--buttons">

        <div class="col-six tab-full left">
            <a href="@ViewBag.cvDownloadUrl" class="btn btn--primary full-width">Download My CV</a>
        </div>
        <div class="col-six tab-full right">
            <a href="#0" class="btn full-width">Bana Ulaşın!</a>
        </div>
    </div>
    @await Component.InvokeAsync("ExperienceComponentPartial")
</section>
