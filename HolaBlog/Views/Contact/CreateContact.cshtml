@model Contact

@{
    ViewData["Title"] = "CreateContact";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İletişim</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">İletişim Ekleme Sayfası</div>
                    </div>
                    <div class="card-body">

                        <form method="post">
                            <label>Başlık</label>
                            <input type="text" asp-for="Title" class="form-control" />
                            <br />
                            <label>Açıklama</label>
                            <textarea rows="4" class="form-control" asp-for="Description"></textarea>
                            <br />
                            <label>Telefon</label>
                            <input type="text" asp-for="Phone" class="form-control" />
                            <br />
                            <label>Eposta</label>
                            <input type="text" asp-for="Email" class="form-control" />
                            <br />
                            <label>Sokak</label>
                            <input type="text" asp-for="Street" class="form-control" />
                            <br />
                            <label>Şehir</label>
                            <input type="text" asp-for="City" class="form-control" />
                            <br />
                            <label>Posta Kodu</label>
                            <input type="text" asp-for="PostalCode" class="form-control" />
                            <br />
                            <button class="btn btn-success">İletişim Ekle</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>