@model About

@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Hakkımda</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Hakkımda Güncelleme Sayfası</div>
                    </div>
                    <div class="card-body">

                        <form method="post">
                            <label>Açıklama</label>
                            <textarea rows="4" class="form-control" asp-for="Description"></textarea>
                            <br />
                            <label>Hakkımda Detayı</label>
                            <textarea rows="4" class="form-control" asp-for="AboutDetails"></textarea>
                            <br />
                            <label>CV Url</label>
                            <input type="text" asp-for="CvDownloadUrl" class="form-control" />
                            <br />
                            <button class="btn btn-success">Hakkımda Güncelle</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
