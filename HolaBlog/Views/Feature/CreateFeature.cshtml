@model Feature
@{
    ViewData["Title"] = "CreateFeature";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Öne Çıkanlar</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Öne Çıkan Ekleme Sayfası</div>
                    </div>
                    <div class="card-body">

                        <form method="post">
                            <label>Başlık</label>
                            <input type="text" asp-for="Title" class="form-control" />
                            <br />
                            <label>Ad</label>
                            <input type="text" asp-for="FirstName" class="form-control" />
                            <br />
                            <label>Soyad</label>
                            <input type="text" asp-for="LastName" class="form-control" />
                            <br />
                            <label>Açıklama</label>
                            <textarea rows="4" class="form-control" asp-for="Description"></textarea>
                            <br />
                            <button class="btn btn-success">Öne Çıkanı Ekle</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>